(jbuild_version 1)

(executable
  ((name main)
   (libraries (core camlsnark async async_extra ppx_inline_test.runtime-lib))
   (preprocess (pps (ppx_jane ppx_driver.runner (-inline-test-lib main))))
   (flags (-w -40 -g))
   (modes (native))
  ))

(alias
  ((name runtest)
   (deps (main.exe))
   (action (run ${<} inline-test-runner main))))

(install
 ((section bin)
  (files ((main.exe as main)))))

