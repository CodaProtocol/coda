THIS_PPX_EXECUTABLE_OPTS = REPO_PPX_EXECUTABLE_OPTS + PKG_PPX_EXECUTABLE_OPTS

################################################################
## STANZA 1: LIBRARY CHILD_PROCESSES
################################################################
CHILD_PROCESSES_INTERFACE_OPTS = REPO_INTERFACE_OPTS + PKG_INTERFACE_OPTS

CHILD_PROCESSES_MODULE_OPTS = REPO_MODULE_OPTS + PKG_MODULE_OPTS

CHILD_PROCESSES_ARCHIVE_OPTS = REPO_ARCHIVE_OPTS + PKG_ARCHIVE_OPTS + []

CHILD_PROCESSES_NS_MODULE_OPTS = REPO_NS_MODULE_OPTS + PKG_NS_MODULE_OPTS

CHILD_PROCESSES_DEPS = [
    # do not sort (buildifier)
    "@opam//pkg:async",
    "@opam//pkg:core",
    "@opam//pkg:ctypes",
    "@opam//pkg:ctypes.foreign",
    "@mina//src/lib/file_system",
    "@mina//src/lib/logger",
    "@mina//src/lib/pipe_lib",
]

##############
ocaml_archive(
    name = "child_processes",
    opts = CHILD_PROCESSES_ARCHIVE_OPTS,
    visibility = ["//visibility:public"],
    deps = CHILD_PROCESSES_DEPS + [
        # do not sort (buildifier)
        ":_Child_processes",
        ":_Syslimits",
        ":_Termination",
    ],
    cc_deps = {
        ":caml_syslimits": "default"
    }
)

#########
ocaml_ns(
    name = "Child_processes_ns",
    ns = "child_processes",
    opts = CHILD_PROCESSES_NS_MODULE_OPTS,
    submodules = [
        # do not sort (buildifier)
        "child_processes.ml",
        "syslimits.ml",
        "termination.ml",
    ],
)

#############
ocaml_module(
    name = "_Child_processes",
    src = "child_processes.ml",
    intf = ":_Child_processes.cmi",
    ns = ":Child_processes_ns",
    opts = CHILD_PROCESSES_MODULE_OPTS,
    ppx = ":ppx.exe",
    ppx_args = [
        # do not sort (buildifier)
        "--conditional",
        "-inline-test-lib",
        "child_processes",
    ],
    deps = CHILD_PROCESSES_DEPS + [
        # do not sort (buildifier)
        ":_Syslimits",          # obazl:retain
        ":_Termination"
    ],
)

################
ocaml_interface(
    name = "_Child_processes.cmi",
    src = "child_processes.mli",
