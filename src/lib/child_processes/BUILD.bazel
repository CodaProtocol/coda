    name = "_Syslimits",
    src = "syslimits.ml",
    ns = ":Child_processes_ns",
    opts = CHILD_PROCESSES_MODULE_OPTS,
    ppx = ":ppx.exe",
    ppx_args = [
        # do not sort (buildifier)
        "--conditional",
        "-inline-test-lib",
        "child_processes",
    ],
    deps = CHILD_PROCESSES_DEPS,
)

#############
ocaml_module(
    name = "_Termination",
    src = "termination.ml",
    ns = ":Child_processes_ns",
    opts = CHILD_PROCESSES_MODULE_OPTS,
    ppx = ":ppx.exe",
    ppx_args = [
        # do not sort (buildifier)
