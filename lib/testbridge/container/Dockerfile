# OPAM for debian-stable with local switch of OCaml 4.05.0
# Autogenerated by OCaml-Dockerfile scripts
FROM ocaml-base:latest

WORKDIR /testbridge

ADD ./ /testbridge
ADD ./testbridge.opam.in /testbridge/testbridge.opam

RUN sudo mkdir /app

RUN sudo chown -R opam /testbridge

RUN eval `opam config env` && dune build

RUN sudo chown -R opam /app

CMD bash -c "while true; do ./_build/install/default/bin/container; sleep 1; done"


