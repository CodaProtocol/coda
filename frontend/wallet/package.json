{
  "name": "coda-wallet",
  "version": "0.1.0",
  "description": "",
  "main": "./lib/js/src/main/App.js",
  "dependencies": {
    "@glennsl/bs-jest": "^0.4.8",
    "@glennsl/bs-json": "^3.0.0",
    "bs-css": "^8.0.2",
    "bs-electron": "github:Schmavery/bs-electron",
    "bs-platform": "^5.0.3",
    "graphql_ppx": "^0.2.8",
    "node-fetch": "^2.5.0",
    "reason-apollo": "^0.16.0",
    "reason-react": "^0.7.0",
    "tablecloth-bucklescript": "file:./tablecloth/bs"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron-builder": "^20.39.0",
    "fastpack": "^0.8.4",
    "graphql-faker": "^1.9.0",
    "node": "^8.15.0"
  },
  "scripts": {
    "fake": "graphql-faker --port 8080 -- schema.graphql",
    "fake-inspector": "graphql-faker --open -- schema.graphql",
    "build": "bsb -make-world",
    "build-ci": "npm run query-fake && npm run build",
    "clean": "bsb -clean-world",
    "pack": "fpack --development ./lib/js/src/render/Index.js",
    "query": "send-introspection-query http://localhost:8080/graphql",
    "query-fake": "concurrently --kill-others 'npm run fake' 'sleep 5 && npm run query'",
    "reformat": "bsrefmt --in-place src/**/*.re",
    "test": "npm run build && jest",
    "dist": "npm run build && npm run pack && build",
    "dev": "concurrently --kill-others 'bsb -make-world -w' 'fpack watch --development ./lib/js/src/render/Index.js' 'electron ./lib/js/src/main/App.js'"
  },
  "build": {
    "appId": "FOO.org.codaprotocol.prowallet",
    "files": [
      "./lib/**/*",
      "!node_modules/electron",
      "!node_modules/graphql_ppx",
      "!node_modules/bs-platform/lib",
      "node_modules/bs-platform/lib/js",
      "package.json"
    ],
    "extraResources": [
      "bundle/**/*",
      "public/*"
    ],
    "compression": "store",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS"
    }
  },
  "author": "",
  "license": "ISC"
}
