(jbuild_version 1)

(executable
  ((name logproc)
   (public_name logproc)
   (libraries (core logger async))
   (preprocess (pps (ppx_jane ppx_inline_test ppx_driver.runner (-inline-test-lib logproc))))
   (flags (-w -40 -g))
   (modes (native))
  ))

(menhir
  ((modules (filter_parser))))
(ocamllex (filter_lexer))

(alias
  ((name runtest)
   (deps (logproc.exe))
   (action (run ${<} inline-test-runner logproc))))

