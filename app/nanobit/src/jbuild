(jbuild_version 1)

(executable
  ((name cli)
   (public_name cli)
   (libraries
    ( core
      linear_pipe
      swimlib
      nanobit_base
      camlsnark
      async
      async_extra
      async_ssl
      cohttp
      cohttp-async))
   (preprocess (pps (ppx_jane ppx_inline_test ppx_driver.runner (-inline-test-lib cli))))
   (flags (-w -40 -g))
   (modes (native))
  ))

(rule
 ((targets (keys.ml))
  (deps    (gen/genkeys.exe))
  (action  (run ${<} ${@}))))

(alias
  ((name runtest)
   (deps (cli.exe))
   (action (run ${<} inline-test-runner cli))))

